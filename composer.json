{
    "name": "willdurand/propilex",
    "description": "Silex + Propel + Backbone",
    "license": "MIT",
    "authors": [
        {
            "name": "William DURAND",
            "email": "william.durand1@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "propel/propel-service-provider": "~1.0@dev",
        "propel/propel1": "~1.7",
        "silex/silex": "~1.0",
        "symfony/validator": "~2.4",
        "willdurand/hateoas": "~2.0@dev",
        "symfony/property-access": "~2.4",
        "symfony/yaml": "~2.4",
        "willdurand/stack-negotiation": "0.0.*",
        "stack/builder": "~1.0",
        "stack/run": "~1.0",
        "symfony/config": "~2.4",
        "pagerfanta/pagerfanta": "~1.0",
        "hautelook/templated-uri-router": "~1.0",
        "nicl/silex-markdown": "~1.1"
    },
    "require-dev": {
        "symfony/browser-kit": "~2.4",
        "phpunit/phpunit": "~3.7"
    },
    "autoload": {
        "psr-0": { "Propilex": "src" }
    },
    "config": {
        "bin-dir": "bin/"
    },
    "extra": {
        "heroku": {
            "framework": "silex",
            "document-root": "web",
            "index-document": "index.php",
            "compile": [
                "cp app/config/propel/runtime-conf.xml.dist app/config/propel/runtime-conf.xml",
                "cp app/config/propel/build.properties.dist app/config/propel/build.properties",
                "chmod +x vendor/propel/propel1/generator/bin/phing.php",
                "bin/bootstrap",
                "./node_modules/.bin/bower install"
            ]
        }
    }
}
